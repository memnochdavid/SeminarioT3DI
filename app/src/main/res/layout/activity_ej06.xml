<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ej06Activity">


    <LinearLayout
        android:id="@+id/uno"
        android:background="#6100EB"
        android:orientation="horizontal"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dos">
        <TextView
            android:text="Ejercicio 06 - MENU ACTIVIDAD"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dos"
        android:orientation="horizontal"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="15dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/uno"
        app:layout_constraintBottom_toTopOf="@id/tres">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="INSEMINARIO DI Tema3\nEjercicios derivados del 06"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tres"
        app:layout_constraintVertical_weight="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/dos"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/boton06_01"
            android:text="Ejercicio 06 - 1"
            android:textColor="@color/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lila"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/boton06_02"
            android:text="Ejercicio 06 - 2"
            android:textColor="@color/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lila"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/boton06_03"
            android:text="Ejercicio 06 - 3"
            android:textColor="@color/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lila"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/boton06_04"
            android:text="Ejercicio 06 - 4"
            android:textColor="@color/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lila"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>